<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:weightSum="1"
        android:baselineAligned="false">

        <Button
            android:id="@+id/btnDropDownPersonalCategories"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/bottom_bar"
            android:text="קטגוריות מועדםות"
            android:layout_below="@+id/btnDropDownPersonalCategories"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="top"
            android:layout_weight="0.25"
            android:clickable="false"
            android:elegantTextHeight="false"
            android:ellipsize="middle" />
        <Button
            android:id="@+id/btnDropDownPersonalCategoriesNOT"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/bottom_bar"
            android:text="רכיבים להסתרה "
            android:layout_below="@+id/btnDropDownPersonalCategories"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="top"
            android:layout_weight="0.25"
            android:clickable="false"
            android:elegantTextHeight="false"
            android:ellipsize="middle" />

        <Button
            android:id="@+id/button"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/bottom_bar"
            android:text="הגדרות אשיות"
            android:layout_below="@+id/btnDropDownPersonalCategories"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="top"
            android:layout_weight="0.25" />

        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:textSize="@dimen/abc_text_size_button_material"
            android:layout_height="wrap_content"
            android:background="@android:drawable/bottom_bar"
            android:text="ספר מתכונים"
            android:layout_below="@+id/btnDropDownPersonalCategories"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="top"
            android:layout_weight="0.25" />

    </LinearLayout>


    <ListView
    android:id="@+id/listView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_gravity="bottom"
        android:layout_weight="1">
    </ListView>

