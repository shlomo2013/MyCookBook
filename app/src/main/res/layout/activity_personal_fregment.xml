<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:layout_marginBottom="56dp"
    android:fillViewport="true"
    android:layout_row="0"
    android:layout_column="0">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlButtons"
            android:weightSum="1"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_gravity="right">

            <Button
                android:id="@+id/bSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הגדרות"
                android:textSize="10sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:clickable="false"
                android:elegantTextHeight="false"
                android:layout_weight="0.25"
                android:backgroundTint="#ae222222" />
            <Button
                android:id="@+id/bAddAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הוסף אלבום"
                android:textSize="10sp"
                android:layout_below="@+id/btnDropDownPersonalCategories"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:clickable="false"
                android:elegantTextHeight="false"
                android:layout_weight="0.25"
                android:backgroundTintMode="src_over"
                android:backgroundTint="#ae222222" />

            <Button
                android:id="@+id/bAllAlbums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ספרי המתכונים ששיתפו איתי"
                android:textSize="10sp"
                android:layout_below="@+id/btnDropDownPersonalCategoriesNOT"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:layout_weight="0.25"
                android:backgroundTint="#ae222222" />

            <Button
                android:id="@+id/bMyAlbums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ספרי המתכונים שלי"
                android:textSize="10sp"
                android:layout_below="@+id/btnSettings"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:layout_weight="0.25"
                android:backgroundTint="#ae222222"
                android:backgroundTintMode="src_over" />

        </LinearLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/fragPersonal"
                android:layout_height="match_parent"
            android:orientation="vertical"
                android:background="#ae222222"
            android:layout_below="@+id/rlButtons" />
