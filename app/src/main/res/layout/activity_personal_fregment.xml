<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView"
    android:layout_marginBottom="56dp"
    android:fillViewport="true"
    android:layout_row="0"
    android:layout_column="0">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/rlButtons"
            android:weightSum="1"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:layout_gravity="right">

            <Button
                android:id="@+id/btnDropDownPersonalCategories"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/bottom_bar"
                android:text="קטגוריות מועדםות"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:layout_weight="0.25"
                android:clickable="false"
                android:elegantTextHeight="false"
                android:ellipsize="middle" />
            <Button
                android:id="@+id/btnDropDownPersonalCategoriesNOT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/bottom_bar"
                android:text="רכיבים להסתרה "
                android:layout_below="@+id/btnDropDownPersonalCategories"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:layout_weight="0.25"
                android:clickable="false"
                android:elegantTextHeight="false"
                android:ellipsize="middle" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/bottom_bar"
                android:text="הגדרות אשיות"
                android:layout_below="@+id/btnDropDownPersonalCategoriesNOT"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:layout_weight="0.25" />

            <Button
                android:id="@+id/btnAlbums"
                android:layout_width="fill_parent"
                android:textSize="@dimen/abc_text_size_button_material"
                android:layout_height="wrap_content"
                android:background="@android:drawable/bottom_bar"
                android:text="ספר מתכונים"
                android:layout_below="@+id/btnSettings"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:layout_weight="0.25" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentLayout"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/rlButtons"
            android:baselineAligned="false">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.50">
            </ListView>

            <ListView
                android:id="@+id/lvAllAlbumes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_below="@id/listView"
                android:layout_weight="0.50">
            </ListView>
        </LinearLayout>
        <!--<GridView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/albumGrid"-->
        <!--android:layout_below="@+id/linearLayout1"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:numColumns="auto_fit"-->
        <!--android:columnWidth="100dp"-->
        <!--android:verticalSpacing="5dp"-->
        <!--android:stretchMode="spacingWidthUniform"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="48dp"-->
        <!--android:layout_gravity="top|center" />-->
    </RelativeLayout>
</ScrollView>
