            <!--android:layout_height="73dp"-->
            <!--android:id="@+id/ivProfilepic"-->
            <!--android:src="@drawable/com_facebook_profile_picture_blank_square"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_alignBottom="@+id/btnAddRecipe"-->
            <!--android:layout_toRightOf="@+id/btnAddRecipe"-->
            <!--android:layout_toEndOf="@+id/btnAddRecipe"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:theme="@style/com_facebook_loginview_default_style" />-->

            <!--android:theme="@style/com_facebook_loginview_default_style" />-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/imageView2"
            android:background="#000000"
            android:layout_toRightOf="@+id/btnAddRecipe"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:cropToPadding="false"
            android:adjustViewBounds="true"
            android:src="@mipmap/cheff" />

    </RelativeLayout>


</LinearLayout>
